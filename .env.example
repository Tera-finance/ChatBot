# Copy this file to .env and fill in real values. Do NOT commit your real .env to version control.
# Example .env for TrustBridge-Chatbot

# FreeCurrencyAPI (fiat exchange rates)
# Get a free key at https://freecurrencyapi.com/
FREECURRENCY_API_KEY=YOUR_FREECURRENCYAPI_KEY_HERE

# CoinMarketCap (crypto exchange rates) - optional if you use CMC
# Get an API key at https://coinmarketcap.com/api/
CMC_API_KEY=YOUR_COINMARKETCAP_API_KEY_HERE

# WhatsApp session name used by whatsapp-web.js LocalAuth
WHATSAPP_SESSION_NAME=trustbridge-session

# Node environment
NODE_ENV=development
# Copy this file to .env and fill in your actual values

# Environment Configuration
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=info

# WhatsApp Bot Configuration
WHATSAPP_SESSION_NAME=trustbridge-session

# CoinMarketCap API Configuration
CMC_API_KEY=your_coinmarketcap_api_key_here

# Database Configuration (for future use)
# DATABASE_URL=postgresql://username:password@localhost:5432/trustbridge
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=trustbridge
# DATABASE_USER=your_username
# DATABASE_PASSWORD=your_password

# API Keys (for future integrations)
# CARDANO_API_KEY=your_cardano_api_key
# TRUSTBRIDGE_API_KEY=your_api_key

# Security
# JWT_SECRET=your_jwt_secret_key
# ENCRYPTION_KEY=your_encryption_key

# External Service URLs
TRUSTBRIDGE_WEBSITE=https://trustbridge-finance.vercel.app/

# Rate Limiting
MAX_MESSAGES_PER_MINUTE=10
MAX_LOGIN_ATTEMPTS=3

# Feature Flags
# ENABLE_STICKER_FEATURE=true
ENABLE_TRANSFER_FEATURE=true
ENABLE_BALANCE_CHECK=true